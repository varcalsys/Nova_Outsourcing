<script type="text/javascript">
    $(function () {
        $('.Contato').submit(function () {
            $.ajax({
                url: 'Home/ContactForm',
                type: 'POST',
                data: $('.Contato').serialize(),
                success: function (data) {

                    document.getElementById('ContactForm').reset();

                    if (data == 'info') {
                        $('.mensagem').html(data);
                        $('.info').show();
                        $('.info').hide(5000);
                    } else {
                        $('.mensagem').html(data);
                        $('.errors').show();
                        $('.errors').hide(5000);
                    }
                }
            });
            return false;
        });
    });

</script>